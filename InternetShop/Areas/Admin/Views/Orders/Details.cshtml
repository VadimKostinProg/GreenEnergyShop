@model IEnumerable<OrderDetailsResponse>

@{
    ViewBag.Title = "Деталі замовлення";
}

<div class="container">
    <div class="row">
        <div class="container">
            <div class="row pt-4">
                <div class="col-6">
                    <h2 class="text-primary">Деталі замовлення</h2>
                </div>
            </div>
        </div>

        <table id="productsTable" class="table table-bordered table-striped w-100">
            <thead>
                <tr>
                    <th class="h4">Назва продукту</th>
                    <th class="h4">Категорія</th>
                    <th class="h4">Ціна</th>
                    <th class="h4">Кількість</th>
                    <th class="h4">Вартість</th>
                </tr>
            </thead>
            <tbody>
                @{
                    decimal totalCost = 0;
                }
                @foreach (OrderDetailsResponse orderDetails in Model)
                {
                    <tr>
                        <td class="lead">@orderDetails.ProductName</td>
                        <td class="lead">@orderDetails.CategoryName</td>
                        <td class="lead">@orderDetails.Price</td>
                        <td class="lead">@orderDetails.Quantity</td>
                        <td class="lead">@orderDetails.Cost</td>
                    </tr>
                    totalCost += orderDetails.Cost;
                }
                <tr>
                    <td class="lead" colspan="4">Загальна вартість:</td>
                    <td class="lead">@totalCost</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>