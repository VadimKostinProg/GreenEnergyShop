@{
    ViewBag.Title = "Видалення замовлень";
}

<form asp-action="DeleteRange" method="post" id="deleteForm">
    <div class="container border p-3 mt-4 w-75">
        <h2>Видалення замовлень в проміжку дат</h2>
        <div class="row mb-3">
            <div class="col-6">
                <label class="lead" for="start">Початок інтервалу</label>
                <input name="start" type="date" class="form-control" id="startDate" />
            </div>
            <div class="col-6">
                <label class="lead" for="end">Кінець інтервалу</label>
                <input name="end" type="date" class="form-control" id="endDate" />
            </div>
        </div>
        <div class="row">
            <div class="col-6">
                <button type="submit" class="btn btn-danger form-control">Видалити</button>
            </div>
            <div class="col-6">
                <a class="btn btn-secondary form-control" asp-action="Index">Назад</a>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    <script src="~/js/deleteOrders.js"></script>
}