@model IEnumerable<IdentityUser>

@{
    ViewBag.Title = "Налаштування користувачів";
}

<div class="container">
    <div class="row">
        <div class="container">
            <div class="row pt-4">
                <div class="col-6">
                    <h2 class="text-primary">Адміністратори сайту</h2>
                </div>
                <div class="col-6 text-end">
                    <a asp-controller="Users" asp-action="CreateUser" class="btn btn-primary mb-3">
                        <i class="bi bi-plus-circle"></i>
                    </a>
                </div>
            </div>
        </div>

        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th class="h4">Пошта</th>
                    <th class="h4">Номер</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td class="lead">@user.Email</td>
                        <td class="lead">@user.PhoneNumber</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>