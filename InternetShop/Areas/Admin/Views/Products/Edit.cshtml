@model ProductUpdateRequest

@{
    ViewBag.Title = "Редагування продукту";
}

<form asp-controller="Products" asp-action="Edit" method="post" enctype="multipart/form-data">
    <div class="container border p-3 mt-4">
        <div class="row">
            <div class="col-6">
                <h2 class="text-primary mt-3">
                    Редагування продукту
                </h2>
                <input asp-for="Id" hidden />
                <div class="row mb-3">
                    <div class="col-3">
                        <label asp-for="Name" class="pt-3">Назва</label>
                    </div>
                    <div class="col-9">
                        <input type="text" asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-3">
                        <label asp-for="Description" class="pt-3">Опис</label>
                    </div>
                    <div class="col-9">
                        <textarea type="text" asp-for="Description" class="form-control"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-3">
                        <label asp-for="CategoryId" class="pt-3">Категорія</label>
                    </div>
                    <div class="col-9">
                        <select asp-for="CategoryId" asp-items="@ViewBag.CategoryList" class="form-control" id="category-select">
                        </select>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-3">
                        <label asp-for="Currency" class="pt-3">Валюта ціни</label>
                    </div>
                    <div class="col-9">
                        <select asp-for="Currency" asp-items="@ViewBag.CurrencyList" class="form-control">
                        </select>
                        <span asp-validation-for="Currency" class="text-danger"></span>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-3">
                        <label asp-for="Price" class="pt-3">Ціна</label>
                    </div>
                    <div class="col-9">
                        <input type="number" step=".01" asp-for="Price" class="form-control" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-3">
                        <label asp-for="IsDiscountActive" class="pt-3">Активна знижка</label>
                    </div>
                    <div class="col-9">
                        <input type="checkbox" onchange="changeVisibility()" id="isDiscountActiveCheckBox" asp-for="IsDiscountActive" />
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-3">
                        <label asp-for="DiscountPrice" class="pt-3">Ціна зі знижкою</label>
                    </div>
                    <div class="col-9">
                        <input type="number" step=".01" asp-for="DiscountPrice" id="discountPriceInput" class="form-control" />
                        <span asp-validation-for="DiscountPrice" class="text-danger"></span>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-3">
                        <label asp-for="IsPopular" class="pt-3">Популярне</label>
                    </div>
                    <div class="col-9">
                        <input type="checkbox" asp-for="IsPopular" />
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-3">
                        <label asp-for="Status" class="pt-3">Статус</label>
                    </div>
                    <div class="col-9">
                        <select asp-for="Status" asp-items="@ViewBag.StatusList" class="form-control">
                        </select>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-3">
                        <label asp-for="ImageUrl" class="pt-3">Зображення</label>
                    </div>
                    <div class="col-9">
                        <input asp-for="ImageUrl" hidden />
                        <input type="file" name="image" class="form-control border-0" />
                    </div>
                </div>
            </div>
            <div class="col-6">
                <h3 class="text-primary mt-3">
                    Характеристики
                </h3>
                <div id="characteristics-list">
                    @for (int i = 0; i < Model.Characteristics.Count && i < ViewBag.CharacteristicsName.Count; i++)
                    {
                        <div class="row mb-3">
                            <div class="col-4">
                                <label asp-for="Characteristics" class="pt-3">@ViewBag.CharacteristicsName[i]</label>
                            </div>
                            <div class="col-8">
                                <input type="text" name="Characteristics[@i]" class="form-control" value="@Model.Characteristics[i]" />
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-6">
                <button type="submit" class="btn btn-primary form-control">Редагувати</button>
            </div>
            <div class="col-6">
                <a asp-controller="Products" asp-action="Index" class="btn btn-secondary form-control">Назад</a>
            </div>
        </div>
        @if (ViewData.ContainsKey("Errors"))
        {
            <div class="row">
                <div class="col-6">
                    @foreach (var error in ViewBag.Errors)
                    {
                        <span class="text-danger">@error</span>
                    }
                </div>
            </div>
        }
    </div>
</form>

@section Scripts{
    <script src="~/js/product.js"></script>
    <script src="~/js/changeFieldVisibility.js"></script>
    @{
        <partial name="_ValidationScriptsPartial.cshtml" />
    }
}