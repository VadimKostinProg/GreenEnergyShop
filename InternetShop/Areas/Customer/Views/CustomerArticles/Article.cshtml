@model ArticleResponse

@{
    ViewBag.Title = "Про нас";
    bool isAdmin = User.IsInRole("Admin");
}

<div class="container border p-3 mt-4 w-75">
    <div class="row mt-3">
        <div class="col-6">
            <h2 class="p-2">@Model.Title</h2>
        </div>
        <div class="col-6 text-end">
            @if (isAdmin && Model.IsHeaderArticle)
            {
                <a asp-area="Customer" asp-controller="CustomerArticles" asp-action="Edit" asp-route-articleId="@Model.Id" class="btn btn-dark mb-2">
                    <i class="bi bi-pencil-square"></i>
                </a>
            }
        </div>
    </div>
    <div class="row mt-3 p-3">
        @Html.Raw(Model.Description)
    </div>
</div>